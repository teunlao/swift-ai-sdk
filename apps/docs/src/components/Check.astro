---
interface Props {
  size?: number;
}

const { size = 18 } = Astro.props;
---

<svg
  xmlns="http://www.w3.org/2000/svg"
  width={size}
  height={size}
  viewBox="0 0 24 24"
  fill="none"
  stroke="currentColor"
  stroke-width="2"
  stroke-linecap="round"
  stroke-linejoin="round"
  class="check-icon"
  aria-label="Supported"
>
  <polyline points="20 6 9 17 4 12"></polyline>
</svg>

<style>
  .check-icon {
    display: inline-block;
    vertical-align: middle;
    color: #10b981;
  }
</style>
