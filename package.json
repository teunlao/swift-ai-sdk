{
	"name": "swift-ai-sdk-monorepo",
	"private": true,
	"packageManager": "pnpm@10.18.3",
	"workspaces": [
		"tools/orchestrator-mcp",
		"tools/orchestrator-dashboard",
    "tools/orchestrator-db",
    "apps/docs"
  ],
	"bin": {
		"orchestrator-dashboard": "./tools/orchestrator-dashboard/bin/start-dashboard.cjs"
	},
  "scripts": {
    "build": "npm run build --workspaces",
    "lint": "echo 'No lint configured'",
    "test": "npm run test --workspaces",
    "dashboard": "orchestrator-dashboard",
    "docs:dev": "pnpm -C apps/docs dev",
    "docs:build": "pnpm -C apps/docs build",
    "docs:preview": "pnpm -C apps/docs preview",
    "docs:sync": "pnpm -C apps/docs sync",
    "docs:check": "pnpm -C apps/docs check"
  },
	"devDependencies": {
		"@types/node": "^24.7.2"
	},
	"pnpm": {
		"onlyBuiltDependencies": [
			"better-sqlite3",
			"sharp"
		]
	}
}
